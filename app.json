{
  "expo": {
    "name": "GlaucoCare",
    "slug": "glaucocare",
    "scheme": "glaucocare",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/logo-bg-wt.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to capture medical documents.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select medical documents.",
        "NSLocationWhenInUseUsageDescription": "This app needs location access to find nearby doctors and hospitals.",
        "NSFaceIDUsageDescription": "This app uses Face ID for secure authentication."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/logo.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC",
        "android.permission.RECORD_AUDIO",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK"
      ],
      "package": "com.anonymous.glaucocare"
    },
    "web": {
      "bundler": "metro",
      "favicon": "./src/assets/images/logo-blue.png"
    },
    "plugins": [
      "expo-camera",
      "expo-notifications",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow GlaucoCare to access your photos",
          "cameraPermission": "Allow GlaucoCare to access your camera"
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      "expo-document-picker",
      "expo-local-authentication",
      "expo-notifications",
      "expo-font",
      "expo-web-browser"
    ],
    "extra": {
      "eas": {
        "projectId": "c6735223-ee6a-4651-ba98-b234173c1c77"
      }
    }
  }
}
